<Page x:Class="Багманов41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Багманов41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин" 
               HorizontalAlignment="Right" VerticalAlignment="Bottom" 
               Margin="5" FontSize="14"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="LoginTB"
             HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
             Margin="5" FontSize="14"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль" 
               HorizontalAlignment="Right" VerticalAlignment="Center" 
               Margin="5" FontSize="14"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="PassTB"
             HorizontalAlignment="Stretch" VerticalAlignment="Center" 
             Margin="5" FontSize="14"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Войти как гость"
            HorizontalAlignment="Left" VerticalAlignment="Center" 
            Margin="5" FontSize="14" Click="Button_Click"/>
        <Button Name="LoginBtn" Grid.Row="2" Grid.Column="1" Content="Войти" 
            HorizontalAlignment="Right" VerticalAlignment="Center" 
            Margin="5" FontSize="14" Click="LoginBtn_Click"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
            <TextBlock Name="captchaOneChar" FontSize="22" Margin="30,0,0,0"></TextBlock>
            <TextBlock Name="captchaTwoChar" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
            <TextBlock Name="captchaThreeChar" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
            <TextBlock Name="captchaFourChar" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
        </StackPanel>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Введите капчу:" Margin="5"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
            <TextBox Name="CaptchaInputTB" Width="100" Height="25" Margin="0,0,10,0" Visibility="Collapsed"/>
            <Button Name="RefreshCaptchaBtn" Content="з" Width="30" Height="30" 
                        Click="RefreshCaptchaBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>